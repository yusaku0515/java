public class Main {
	public static void main(String[] args) {
	    int isHungry = 0;
	    String food = ("ハンバーグ");
	    System.out.println("こんにちは");
	    if (isHungry == 0) {
	        System.out.println("お腹いっぱいです");
	    } else {
	            System.out.println("はらぺこです");
	            System.out.println(food +"を頂きます");
	    }
	    System.out.println("ごちそうさまでした");
	}
}